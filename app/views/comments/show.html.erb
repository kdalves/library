<% content_for :title, "Comment Details" %>

<% if notice.present? %>
  <div class="mb-6 px-4 py-3 rounded-lg bg-green-100 text-green-800 border border-green-300">
    <%= notice %>
  </div>
<% end %>

<!-- Comentário em card -->
<div class="bg-white p-6 rounded-xl shadow-md mb-6">
  <%= render @comment %>
</div>

<!-- Ações -->
<div class="space-x-4">
  <%= link_to "✏️ Edit this comment", edit_comment_path(@comment),
      class: "inline-block bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition text-sm" %>

  <%= link_to "← Back to comments", comments_path,
      class: "inline-block bg-gray-200 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-300 transition text-sm" %>

  <%= button_to "🗑️ Destroy this comment", @comment,
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: "inline-block bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition text-sm" %>
</div>
