<%= form_with(model: publisher, local: true) do |form| %>
  <% if publisher.errors.any? %>
    <div class="mb-6 p-4 bg-red-100 border border-red-300 text-red-700 rounded-lg">
      <h2 class="font-semibold mb-2">
        <%= pluralize(publisher.errors.count, "error") %> prohibited this publisher from being saved:
      </h2>
      <ul class="list-disc list-inside text-sm">
        <% publisher.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name -->
  <div class="mb-4">
    <%= form.label :name, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name,
        class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Submit Button -->
  <div>
    <%= form.submit "Save Publisher",
        class: "bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 transition text-sm" %>
  </div>
<% end %>
