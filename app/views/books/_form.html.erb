<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div class="mb-6 p-4 bg-red-100 border border-red-300 text-red-700 rounded-lg">
      <h2 class="font-semibold mb-2">
        <%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:
      </h2>
      <ul class="list-disc list-inside text-sm">
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title -->
  <div class="mb-4">
    <%= form.label :title, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Summary -->
  <div class="mb-4">
    <%= form.label :summary, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.text_field :summary, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Virtual Checkbox -->
  <div class="mb-4 flex items-center space-x-2">
    <%= form.check_box :virtual, class: "rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
    <%= form.label :virtual, class: "text-gray-700 font-medium" %>
  </div>

  <!-- Category -->
  <div class="mb-4">
    <%= form.label :category_id, "Category", class: "block font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: true },
        { class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" } %>
  </div>

  <!-- Author -->
  <div class="mb-4">
    <%= form.label :author_id, "Author", class: "block font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :author_id, Author.all, :id, :name, { prompt: true },
        { class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" } %>
  </div>

  <!-- Publisher -->
  <div class="mb-6">
    <%= form.label :publisher_id, "Publisher", class: "block font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :publisher_id, Publisher.all, :id, :name, { prompt: true },
        { class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" } %>
  </div>

  <!-- Submit -->
  <div>
    <%= form.submit class: "bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 transition" %>
  </div>
<% end %>
