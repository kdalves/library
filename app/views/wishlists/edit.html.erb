<% content_for :title, "Editing Wishlist" %>

<h1 class="text-3xl font-bold text-indigo-600 mb-6">Editing Wishlist</h1>

<div class="bg-white p-6 rounded-xl shadow-md mb-6">
  <%= render "form", wishlist: @wishlist %>
</div>

<div class="space-x-4">
  <%= link_to "📄 Show this wishlist", @wishlist,
      class: "inline-block bg-gray-200 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-300 transition text-sm" %>

  <%= link_to "← Back to wishlists", wishlists_path,
      class: "inline-block bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition text-sm" %>
</div>
