<% content_for :title, "Authors" %>

<!-- Aviso (notice flash) -->
<% if notice.present? %>
  <div class="mb-6 px-4 py-3 rounded-lg bg-green-100 text-green-800 border border-green-300">
    <%= notice %>
  </div>
<% end %>

<h1 class="text-3xl font-bold text-indigo-600 mb-6">Authors</h1>

<div id="authors" class="grid gap-6 mb-8">
  <% @authors.each do |author| %>
    <div class="bg-white p-4 rounded-xl shadow hover:shadow-md transition">
      <h2 class="text-lg font-semibold text-gray-800"><%= author.name %></h2>
      <div class="mt-2">
        <%= link_to "Show this author", author, class: "text-indigo-600 hover:underline text-sm" %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New author", new_author_path, class: "inline-block bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition text-sm" %>
