<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div class="mb-6 p-4 bg-red-100 border border-red-300 text-red-700 rounded-lg">
      <h2 class="font-semibold mb-2">
        <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
      </h2>
      <ul class="list-disc list-inside text-sm">
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name -->
  <div class="mb-4">
    <%= form.label :name, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name,
        class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Email -->
  <div class="mb-4">
    <%= form.label :email, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.email_field :email,
        class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Password -->
  <div class="mb-4">
    <%= form.label :password, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.password_field :password,
        class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- CPF -->
  <div class="mb-4">
    <%= form.label :cpf, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.text_field :cpf,
        class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Active -->
  <div class="mb-6 flex items-center space-x-2">
    <%= form.check_box :active, class: "rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
    <%= form.label :active, class: "text-gray-700 font-medium" %>
  </div>

  <!-- Submit -->
  <div>
    <%= form.submit "Save User",
        class: "bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 transition text-sm" %>
  </div>
<% end %>
