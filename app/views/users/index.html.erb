<% content_for :title, "Users" %>

<% if notice.present? %>
  <div class="mb-6 px-4 py-3 rounded-lg bg-green-100 text-green-800 border border-green-300">
    <%= notice %>
  </div>
<% end %>

<h1 class="text-3xl font-bold text-indigo-600 mb-6">Users</h1>

<div id="users" class="grid gap-6 mb-8">
  <% @users.each do |user| %>
    <div class="bg-white p-6 rounded-xl shadow hover:shadow-md transition">
      <%= render user %>
      <div class="mt-3">
        <%= link_to "🙍 Show this user", user,
            class: "text-indigo-600 hover:underline text-sm font-medium" %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "➕ New user", new_user_path,
    class: "inline-block bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition text-sm" %>
