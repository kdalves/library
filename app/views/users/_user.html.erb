<div id="<%= dom_id user %>" class="bg-white p-6 rounded-xl shadow hover:shadow-md transition">
  <p class="mb-2">
    <span class="font-semibold text-gray-700">🙍 Name:</span>
    <span class="text-gray-900"><%= user.name %></span>
  </p>

  <p class="mb-2">
    <span class="font-semibold text-gray-700">📧 Email:</span>
    <span class="text-gray-900"><%= user.email %></span>
  </p>

  <p class="mb-2">
    <span class="font-semibold text-gray-700">🔒 Password:</span>
    <span class="text-gray-900"><%= user.password %></span>
  </p>

  <p class="mb-2">
    <span class="font-semibold text-gray-700">🆔 CPF:</span>
    <span class="text-gray-900"><%= user.cpf %></span>
  </p>

  <p>
    <span class="font-semibold text-gray-700">✅ Active:</span>
    <span class="text-gray-900"><%= user.active ? "Yes" : "No" %></span>
  </p>
</div>
